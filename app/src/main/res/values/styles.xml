<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:textColorPrimary">@color/theme_text_color_primary</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="NavigationToolbarButtonTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_navigation_toolbar</item>
        <item name="android:textColor">@color/navigation_toolbar_selected_menu_item_text</item>
    </style>

    <style name="NavigationToolbarMenuItemStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_navigation_dropdown</item>
        <item name="android:textColor">@color/navigation_toolbar_menu_item</item>
    </style>

    <style name="MovementNameTextStyle">
        <item name="android:textSize">@dimen/text_size_movement_name</item>
    </style>
</resources>