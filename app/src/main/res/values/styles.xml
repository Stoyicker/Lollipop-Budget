<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:textColorPrimary">@color/theme_text_color_primary</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="NavigationToolbarButtonTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_navigation_toolbar</item>
        <item name="android:textColor">@color/navigation_toolbar_selected_menu_item_text</item>
    </style>

    <style name="NavigationToolbarMenuItemStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_navigation_dropdown</item>
        <item name="android:textColor">@color/navigation_toolbar_menu_item</item>
    </style>

    <style name="MovementNameTextStyle">
        <item name="android:textSize">@dimen/text_size_movement_name</item>
    </style>

    <style name="MovementEpochTextStyle">
        <item name="android:textSize">@dimen/movement_epoch_text_size</item>
        <item name="android:textColor">@color/movement_epoch_color</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
    </style>

    <style name="UndoBarRootStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/undo_bar_height</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginRight">@dimen/undo_bar_outer_margin</item>
        <item name="android:layout_marginBottom">@dimen/undo_bar_outer_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/undo_bar_max_width</item>
        <item name="android:background">@drawable/undo_root_background</item>
    </style>

    <style name="UndoBarMessageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/undo_message_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/undo_message_background</item>
    </style>

    <style name="UndoBarButtonWrapperStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/undo_button_wrapper_background</item>
    </style>

    <style name="UndoBarDividerStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/undo_bar_divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/undo_bar_divider_margin</item>
        <item name="android:background">@color/undo_divider_color</item>
    </style>

    <style name="UndoBarButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/undo_bar_padding</item>
        <item name="android:paddingRight">@dimen/undo_bar_padding</item>
        <item name="android:drawableLeft">@drawable/ic_undo</item>
        <item name="android:drawablePadding">@dimen/undo_bar_button_drawable_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/undo_button_text</item>
        <item name="android:text">@string/undo_bar_undo_uppercase</item>
        <item name="android:background">@drawable/undo_button_background</item>
    </style>

    <style name="AccountNameText">
        <item name="android:textSize">@dimen/account_name_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AccountNameTextNonSelected" parent="AccountNameText">
        <item name="android:textColor">@color/theme_text_color_secondary</item>
    </style>

    <style name="AccountNameTextSelected" parent="AccountNameText">
        <item name="android:textColor">@color/theme_text_color_primary</item>
    </style>
</resources>