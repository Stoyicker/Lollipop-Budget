<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true">

    <fragment
        android:id="@+id/fragment_navigation_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:name="org.jorge.lbudget.ui.fragment.NavigationToolbarFragment"
        tools:layout="@layout/fragment_navigation_toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_toolbar_selector"
        android:background="@color/navigation_dropdown_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_toolbar_height"
        android:visibility="gone"
        android:elevation="@dimen/elevation_navigation_dropdown" />

    <FrameLayout
        android:id="@+id/content_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/content_margin"
        android:background="@android:color/transparent" />
</LinearLayout>