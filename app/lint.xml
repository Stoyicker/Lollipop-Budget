    <issue id="InflateParams">
        <ignore path="src/main/java/org/jorge/lbudget/ui/frags/MovementDetailDialogFragment.java"/>
        <ignore path="src/main/java/org/jorge/lbudget/ui/frags/MovementImageDialogFragment.java"/>
    </issue>
